{% extends 'UIBundle::base.html.twig' %}

{% block body %}
{% for question in questions %}
<div>
    <h4>{{ question.text }}</h4>
    <p>{{ question.endDate|date('Y-m-d H:i:s') }}</p>
    <ul>
      {% for option in question.options %}
        <li>
          {{ option.text }} <span class="badge">42</span>
          {{ vote_form(question.id, option.id) }}
        </li>
      {% endfor %}
    </ul>
</div>
{% endfor %}

{% endblock %}
